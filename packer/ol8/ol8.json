{
  "builders": [
    {
      "boot_command": [
        "<tab> net.ifnames=0 biosdevname=0 text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "12s",
      "disk_size": "{{user `harddisk_size`}}",
      "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Oracle_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "MD5:8852021d593383c6d9570f32e1f86174",
      "iso_url": "{{user `iso_location`}}/OracleLinux-R8-U7-x86_64-dvd.iso",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nat-localhostreachable1",
          "on"
        ]

      ],
      "virtualbox_version_file": "/tmp/.vbox_version",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "post-processors": [
    {
      "compression_level": 6,
      "only": [
        "virtualbox-iso"
      ],
      "output": "build/{{user `vm_name`}}-x86_64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "script": "scripts/vagrant_user_setup.sh",
      "type": "shell"
    },
    {
      "inline": "dnf update -y",
      "type": "shell"
    },
    {
      "inline": "reboot",
      "type": "shell",
      "expect_disconnect": true
    },
    {
      "script": "scripts/vbox_guest_additions.sh",
      "type": "shell",
      "expect_disconnect": true
    },
    {
      "inline": "reboot",
      "type": "shell",
      "expect_disconnect": true
    },
    {
      "scripts": "scripts/cleanup.sh",
      "type": "shell",
      "pause_before": "10s",
      "timeout": "60s"
    }
  ],
  "variables": {
    "harddisk_size": "65536",
    "iso_location": "/iso",
    "vm_name": "ol8"
  }
}